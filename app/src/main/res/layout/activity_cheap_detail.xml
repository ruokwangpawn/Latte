<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pawn.latte.ccfin_cheap_detail.CheapDetailActivity">

    <include layout="@layout/cheap_detail_top" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tabGravity="fill"
        app:tabIndicatorColor="#D5AC6C"
        app:tabIndicatorHeight="2px"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#D5AC6C"
        app:tabTextAppearance="@style/TabLayoutBoldText"
        app:tabTextColor="#333333" />

    <android.support.v4.view.ViewPager
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>