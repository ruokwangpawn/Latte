<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:gravity="center"
        android:text="优惠信息报错"
        android:textColor="#333333"
        android:textSize="@dimen/dp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_cheap_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="没有优惠信息"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/wrong_cheap_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="优惠内容报错"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/wrong_mc_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="商家电话错误"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/wrong_mc_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="商家地址错误"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/mc_is_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="商家已关/停业/装修"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

        <TextView
            android:id="@+id/alter_cheap_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:drawableRight="@drawable/right_arrow_pray"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="详细报错"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DFDFDF" />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:gravity="center"
        android:text="取消"
        android:textColor="#0099ff"
        android:textSize="@dimen/dp_15" />

</LinearLayout>