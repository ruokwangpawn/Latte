<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_all_cheap_mc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_all_mc_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="所有优惠门店(100)"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/right_arrow_pray" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DFDFDF" />

    <com.pawn.latte.ccfin_cheap_detail.widget.ScrollListView
        android:id="@+id/lv_other_mc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="#DFDFDF"
        android:dividerHeight="1px"
        android:scrollbars="none" />

    <include layout="@layout/space_20px" />

    <RelativeLayout
        android:id="@+id/rl_cheap_wrong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="优惠报错"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/right_arrow_pray" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DFDFDF" />

    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_45"
        android:background="#D5AC6C"
        android:text="支付"
        android:textColor="@color/white" />

</LinearLayout>