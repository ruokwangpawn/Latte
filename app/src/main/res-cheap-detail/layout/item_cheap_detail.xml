<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_dis_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="交通银行：满200减10"
            android:textColor="#333333"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_apply_card"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_23"
            android:background="@null"
            android:text="办卡" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#DFDFDF" />

    <com.pawn.latte.ccfin_cheap_detail.widget.ExpandTextView
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35"
        android:paddingTop="@dimen/dp_5">

        <TextView
            android:id="@id/id_source_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/id_expand_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="展开" />

    </com.pawn.latte.ccfin_cheap_detail.widget.ExpandTextView>

    <include layout="@layout/space_20px" />

</LinearLayout>